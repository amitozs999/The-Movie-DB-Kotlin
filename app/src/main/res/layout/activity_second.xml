<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity_second">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical" android:layout_height="match_parent">


        <RelativeLayout
                android:id="@+id/rl1"
                
                android:layout_width="match_parent"
                android:layout_height="200dp">
            <ImageView android:layout_width="match_parent" android:layout_height="200dp" android:id="@+id/iview"
            />
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_width="250dp" android:layout_height="67dp"
                          android:textStyle="bold"

                          android:id="@+id/tv7" android:layout_marginTop="130dp" android:layout_marginLeft="50dp"

                          android:text="TITLE"

                          android:textColor="@android:color/white" android:textSize="25dp"/>
            </RelativeLayout>


        </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="#324C58" android:layout_marginTop="-2dp">
        <LinearLayout
                android:layout_width="wrap_content" android:layout_height="match_parent">
            <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="120dp" android:layout_height="170dp" android:layout_marginRight="30dp"
                    android:id="@+id/imageview2" android:visibility="visible"/>
        </LinearLayout>
        <LinearLayout android:layout_width="215dp" android:layout_height="match_parent"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent" android:layout_height="35dp" android:text="TITLE"
                      android:layout_marginTop="60dp"
                      android:textColor="@android:color/white" android:id="@+id/tv1" android:textSize="15sp"/>

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:src="@drawable/ic_star_2"
                    android:id="@+id/imageButton" android:background="#324C58"
            />
            <TextView android:layout_width="80dp" android:layout_height="45dp" android:textColor="@android:color/white"
                      android:text="TITLE"
                      android:layout_marginLeft="30dp" android:layout_marginTop="-20dp" android:id="@+id/tv3"/>
        </LinearLayout>

    </LinearLayout>
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                        android:text="Description"
                        android:layout_width="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="30dp" android:id="@+id/textView"
                        android:textSize="22sp" android:layout_marginLeft="10sp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tvoverview"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp" android:layout_marginBottom="10sp"
                        android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="156dp" android:orientation="vertical">
                <TextView
                        android:text="Cast"
                        android:layout_width="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="30dp" android:id="@+id/textView4"
                        android:textSize="22sp" android:layout_marginLeft="10sp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_weight="1"
                        android:orientation="horizontal"

                        android:id="@+id/rView20"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>