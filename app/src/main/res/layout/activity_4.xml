<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TvActivities.MainActivitytv2">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical" android:layout_height="match_parent">


            <RelativeLayout
                    android:id="@+id/rl1"

                    android:layout_width="match_parent"
                    android:layout_height="200dp"> <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#00FFFFFF"
                    android:scaleX="0.10"
                    android:scaleY="0.10"
                    android:textColor="@color/colorAccent"
                    android:visibility="visible" />

                <ImageView android:layout_width="match_parent" android:layout_height="200dp" android:id="@+id/iview"
                />
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:layout_width="250dp" android:layout_height="67dp"
                              android:textStyle="bold"

                              android:id="@+id/tv7" android:layout_marginTop="130dp" android:layout_marginLeft="50dp"

                              android:text="TITLE"

                              android:textColor="@android:color/white" android:textSize="25dp"/>
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:background="#324C58" android:layout_marginTop="-2dp" android:layout_alignParentStart="true">
                <RelativeLayout
                        android:layout_width="wrap_content" android:layout_height="match_parent">
                    <ProgressBar
                            android:id="@+id/progressBar4"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="75sp"
                            android:layout_marginTop="70sp"
                            android:background="#00FFFFFF"
                            android:scaleX="0.50"
                            android:scaleY="0.50"
                            android:textColor="#E6EAEE"
                            android:visibility="visible" />
                    <ImageView
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="120dp" android:layout_height="170dp" android:layout_marginRight="30dp"
                            android:id="@+id/imageview2" android:visibility="visible"/>
                </RelativeLayout>
                <LinearLayout android:layout_width="215dp" android:layout_height="match_parent"
                              android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv1"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="60dp"
                            android:text="                       loading ...."
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:src="@drawable/ic_star_2"
                            android:id="@+id/imageButton" android:background="#324C58"
                    />

                    <TextView
                            android:id="@+id/tv3"
                            android:layout_width="80dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="-20dp"
                            android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                        android:text="Description"
                        android:layout_width="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="30dp" android:id="@+id/textView"
                        android:textSize="22sp" android:layout_marginLeft="10sp"/>

                <TextView
                        android:id="@+id/tvoverview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:text="         loading ..." />
            </LinearLayout>
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                        android:text="Cast"
                        android:layout_width="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="30dp" android:id="@+id/textView41"
                        android:textSize="22sp" android:layout_marginLeft="10sp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_weight="1"
                        android:orientation="horizontal"

                        android:id="@+id/rViewcasttv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                        android:text="Similar Movies"
                        android:layout_width="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="30dp" android:id="@+id/textView51"
                        android:textSize="22sp" android:layout_marginLeft="10sp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_weight="1"
                        android:orientation="horizontal"

                        android:id="@+id/rViewsimilartv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                        android:text="Trailer"
                        android:layout_width="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="30dp" android:id="@+id/textView61"
                        android:textSize="22sp" android:layout_marginLeft="10sp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_weight="1"
                        android:orientation="horizontal"

                        android:id="@+id/rViewvideotv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>